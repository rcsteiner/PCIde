<Page x:Class="Ide.Help.Special"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
    Title="Special Functions">
    <FlowDocumentReader>
        <FlowDocument>
            <Paragraph Style="{StaticResource Header}">Display special constants</Paragraph>
            <Paragraph>
                The BEL character sounds a tone.  "\a"  or use the BEL string constant.
            </Paragraph>
            <Paragraph>
                The CR character returns the cursor to start of the line "\r" or use the CR string constant
            </Paragraph>
        </FlowDocument>
    </FlowDocumentReader>
</Page>
