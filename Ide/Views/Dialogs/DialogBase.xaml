<Window x:Class="Ide.DialogBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="391" d:DesignWidth="504" ShowInTaskbar="False" Background="#FFD3E8E1">
    <DockPanel  Name="dockPanel" LastChildFill="False" ForceCursor="False">
        <Label  Background="{StaticResource TitleBackground}" Height="40" Name="labelTitle" DockPanel.Dock="Top" Content="Dialog" FontSize="24" FontStyle="Italic" Foreground="White" ForceCursor="False" FontWeight="Bold" Padding="10,0" />
        <DockPanel  Name="panelCommand" MinWidth="40" HorizontalAlignment="Stretch" Height="40" DockPanel.Dock="Bottom" LastChildFill="True">
            <Button Content="_Ok" Height="23" Name="cmdOk" Width="75" Margin="4,0" DockPanel.Dock="Right" />
            <Button Content="_Cancel" Height="23" Name="cmdCancel" Width="75" Margin="4,0" DockPanel.Dock="Right" IsCancel="True" />
            <Label Content="Message" Height="32" Name="labelMessage" Foreground="#FF307496" />
        </DockPanel>
    </DockPanel>
</Window>
