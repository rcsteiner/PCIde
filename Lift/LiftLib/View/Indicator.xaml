<UserControl x:Class="Lift.Indicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lift"
             mc:Ignorable="d" 
             Height="23" Width="20">
    <Grid>
        <StackPanel Name="IndicatorPanel" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Polygon x:Name="Up" 
                     Points="20,10 10,0 0,10"  
                     StrokeThickness="0" Fill="#FF05F305"/>
            <Polygon x:Name="Down" 
                     Points="20,3 10,13 0,3"  
                     StrokeThickness="0" Fill="#FF07BAFD"/>
        </StackPanel>
    </Grid>
</UserControl>
