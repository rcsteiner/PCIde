<UserControl x:Class="Lift.View.StatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lift.View"
             xmlns:wpfElevator="clr-namespace:Lift"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="300"
             Width="300" Height="28"
             >
        <StackPanel x:Name="xIndicatorPanel" HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Horizontal" Background="Black" >
            <wpfElevator:Indicator x:Name="xFloorIndicator" Height="22" Margin="10,2,25,0"  />
            <Label x:Name="xFloorNumber" Content="0"  FontWeight="Bold" FontFamily="Segoe UI Black" Background="Black" Foreground="White" Width="158" VerticalAlignment="Center" Height="28" FontSize="15"/>
        </StackPanel>
</UserControl>
